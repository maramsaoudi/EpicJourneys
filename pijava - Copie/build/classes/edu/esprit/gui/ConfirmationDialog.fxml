    <Label text="Voulez vous vraiment supprimer?" textFill="RED">
      <font>
         <Font name="Cambria" size="14.0" />
      </font></Label>
    
    <HBox alignment="CENTER" prefHeight="72.0" prefWidth="0.0" spacing="10">
        <Button onAction="#confirm" text="Oui" />
        <Button onAction="#cancel" text="Non" />
    </HBox>
</VBox>
